<div class="container-home">
    <%= render "shared/navbar"%>
    <div class="projects-all">
        <% @projects.each do |project|%>
        <div class="project-card row">
            <div class="mockups col-12 col-lg-6">
                <% project.photos.each do |photo| %>
                    <% if project.photos.length > 1%>
                        <div class="images">
                            <%= image_tag photo %>
                        </div> 
                    <% else %>
                        <div class="image">
                           <%= image_tag photo %> 
                        </div>
                    <% end %>        
                <%end%>
            </div>
            
            <div class="project-text col-12 col-lg-6">
                <div class="description">
                    <h1><%= project.name%></h1>
                    <%= project.description%>
                </div>
                <div class="urls">
                    <div class="github">
                        <%= link_to "<i class='fab fa-github'></i>".html_safe, project.github, target: :_blank%> View Github
                    </div>
                    <br>
                    <div>
                        <%= link_to "<i class='fab fa-github'></i>".html_safe, project.url, target: :_blank%> View Website
                    </div>
                    
                </div>
            </div>
        </div>    
        <% end %> 
    </div>
</div>